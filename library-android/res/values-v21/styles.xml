<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="lib_theme_base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- enable window content transitions -->
        <!--
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        -->
    </style>

    <style name="lib_style_toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/lib_style_toolbar_title</item>
        <item name="subtitleTextAppearance">@style/lib_style_toolbar_subtitle</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/design_appbar_elevation</item>
        <item name="contentInsetStart">4dp</item><!-- according to the size of the icons, such as R.drawable.ic_back -->
        <item name="contentInsetEnd">4dp</item>
    </style>

    <style name="lib_style_toolbar.collapse">
        <item name="android:elevation">0dp</item>
    </style>

</resources>