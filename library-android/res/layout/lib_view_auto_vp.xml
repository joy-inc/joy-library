<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.android.library.view.banner.BannerView
        android:id="@+id/avpBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/vMask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avpBanner"
        android:layout_alignLeft="@id/avpBanner"
        android:layout_alignRight="@id/avpBanner"
        android:layout_alignTop="@id/avpBanner"
        android:background="@color/black_trans26" />

    <com.android.library.view.banner.indicator.CircleIndicator
        android:id="@+id/cpIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avpBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>