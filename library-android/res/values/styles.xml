<resources>

    <style name="lib_theme_base" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="lib_style_toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/lib_style_toolbar_title</item>
        <item name="subtitleTextAppearance">@style/lib_style_toolbar_subtitle</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="lib_style_toolbar.collapse">

    </style>

    <style name="lib_style_toolbar_title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

    </style>

    <style name="lib_style_toolbar_subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">

    </style>

    <style name="ex_theme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ex_theme_fullscreen" parent="@style/ex_theme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ex dialog theme -->

    <style name="ex_theme_dialog" parent="@style/ex_theme">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
    </style>
</resources>