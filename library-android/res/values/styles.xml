<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="lib_theme_base" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="lib_style_toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/lib_style_toolbar_title</item>
        <item name="subtitleTextAppearance">@style/lib_style_toolbar_subtitle</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="contentInsetStart">4dp</item><!-- according to the size of the icons, such as R.drawable.ic_back -->
        <item name="contentInsetEnd">4dp</item>
    </style>

    <style name="lib_style_toolbar.collapse">

    </style>

    <style name="lib_style_toolbar_title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

    </style>

    <style name="lib_style_toolbar_subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">

    </style>

    <style name="lib_style_appbar" parent="Widget.Design.AppBarLayout">

    </style>

</resources>