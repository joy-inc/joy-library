<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_window_bg</item>
        <item name="android:textColorPrimary">@color/color_primary_text</item>
        <item name="android:textColorSecondary">@color/color_secondary_text</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">@color/color_hint_text</item>
        <item name="android:divider">@color/color_divider</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="noTitle">false</item>
        <item name="overlay">false</item>
    </style>

    <style name="base_theme.translucent">
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="base_theme.translucent.noTitle">
        <item name="noTitle">true</item>
    </style>

    <style name="base_theme.translucent.overlay">
        <item name="overlay">true</item>
    </style>

    <style name="base_theme.translucent.toolbar"/>

    <style name="base_theme.translucent.toolbar.overlay">
        <item name="overlay">true</item>
    </style>

    <style name="base_theme.translucent.navigationBar">
        <item name="colorPrimary">@color/color_primary</item>
    </style>

    <style name="base_theme.noTitle">
        <item name="noTitle">true</item>
    </style>

    <style name="base_style_toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/base_style_toolbar_title</item>
        <item name="subtitleTextAppearance">@style/base_style_toolbar_subtitle</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="contentInsetStart">4dp</item><!-- according to the size of the icons, such as R.drawable.ic_back -->
        <item name="contentInsetEnd">4dp</item>
    </style>

    <style name="base_style_toolbar.collapse"/>

    <style name="base_style_toolbar_button_navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="base_style_toolbar_title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"/>

    <style name="base_style_toolbar_subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle"/>

    <style name="base_style_appbar" parent="Widget.Design.AppBarLayout"/>

</resources>