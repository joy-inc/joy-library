<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Toolbar">
        <attr name="noTitle" format="boolean" />
        <attr name="overlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <!-- 自动换行ViewGroup -->
    <declare-styleable name="NewlineLayout">
        <attr name="horSpacing" format="dimension" />
        <attr name="verSpacing" format="dimension" />
        <attr name="showLines" format="integer" />
    </declare-styleable>

    <!-- 可折叠TextView -->
    <declare-styleable name="FoldTextView">
        <attr name="unfolded" format="boolean" />
        <attr name="minLines" format="integer" />
        <attr name="promptText" format="string" />
        <attr name="promptColor" format="color" />
        <attr name="promptCollapseText" format="string" />
    </declare-styleable>

</resources>